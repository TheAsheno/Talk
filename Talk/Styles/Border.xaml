<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Border" x:Key="TextBoxBorder">
        <Setter Property="BorderBrush" Value="{StaticResource  TextBox.Static.Border}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Margin" Value="0 5 0 5"/>
        <Setter Property="CornerRadius" Value="5" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Grid}}" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource TextBox.MouseOver.Border}" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>